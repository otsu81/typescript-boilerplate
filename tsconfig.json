{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2022",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release"
  ]
}
